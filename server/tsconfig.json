{
    "compilerOptions": {
        "outDir": "../www/app",
        "allowJs": true,
        "target": "es6",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "removeComments": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}